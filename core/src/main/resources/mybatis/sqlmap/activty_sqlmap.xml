<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="ActivityDAOImpl">


    <resultMap id="resultMap" type="com.tianmai.party.dal.dbobj.ActivityDO" >
        <id column="id" property="id" />
        <result column="name" property="name"/>
        <result column="desc" property="desc"/>
        <result column="enable" property="enable"/>
        <result column="begin_time" property="beginTime"/>
        <result column="end_time" property="endTime"/>
        <result column="creator_id" property="creatorId"/>
        <result column="creator_name" property="creatorName"/>
        <result column="tag_list" property="taglist"/>
        <result column="entry_fee" property="entryFee"/>
        <result column="total_expenditure" property="totalExpenditure"/>
        <result column="total_income" property="totalIncome"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <sql id="allColumn">
        id,name,desc,enable,begin_time,end_time,creator_id,creator_name,tag_list,entry_fee,total_expenditure,total_income,gmt_create,gmt_modified
    </sql>

    <sql id="whereCondition">
        WHERE
        <if test="id != null">
            id = #{id}
        </if>
        <if test="creatorId != null">
            creator_id = #{creatorId}
        </if>
    </sql>

    <insert id="insertDO" >
        insert into activity
        (
        <include refid="allColumn"/>
        )
        value (#{id},#{name},#{desc},#{enable},#{beginTime},#{endTime},#{creatorId},#{creatorName},#{taglist},#{entryFee},#{totalExpenditure},#{totalIncome},now(),now())


    </insert>

    <select id="queryDOList" resultMap="resultMap">
        select
        <include refid="allColumn"/>
        from  activity
        <include refid="whereCondition"/>

    </select>


</mapper>