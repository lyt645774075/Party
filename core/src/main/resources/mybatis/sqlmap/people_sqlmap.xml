<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="PeopleDAOImpl">


  <resultMap id="resultMap" type="com.tianmai.party.dal.dbobj.PeopleDO" >
    <id column="id" property="id" />
    <result column="name" property="name"/>
    <result column="sex" property="sex"/>
    <result column="phone" property="phone"/>
    <result column="gmt_create" property="gmtCreate"/>
    <result column="gmt_modified" property="gmtModified"/>
  </resultMap>

  <sql id="allColumn">
    id,name,sex,phone,gmt_create,gmt_modified
  </sql>

  <sql id="whereCondition">
    WHERE
     <if test="id != null">
       id = #{id}
     </if>
    <if test="name != null">
      name = #{name}
    </if>
  </sql>

  <insert id="insertDO" >
    insert into people
    (
    <include refid="allColumn"/>
    )
    value (#{id},#{name},#{sex},#{phone},now(),now())


  </insert>

  <select id="queryDOList" resultMap="resultMap">
    select
    <include refid="allColumn"/>
    from  people
    <include refid="whereCondition"/>

  </select>


</mapper>